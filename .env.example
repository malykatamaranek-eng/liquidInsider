# ============================================
# LIQUIDINSIDER ENVIRONMENT CONFIGURATION
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_USER=liquidinsider
DB_PASSWORD=liquidinsider
DB_NAME=liquidinsider
DB_PORT=5432

# Prisma DATABASE_URL (auto-generated from above)
# DATABASE_URL="postgresql://liquidinsider:liquidinsider@postgres:5432/liquidinsider"

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-secret-key-min-32-characters-long-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
BACKEND_PORT=3001
FRONTEND_PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ============================================
# STORE CONFIGURATION
# ============================================
STORE_NAME=LiquidInsider
STORE_EMAIL=admin@liquidinsider.com
STORE_PHONE=+1234567890

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Leave empty to disable email notifications (will use mock)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@liquidinsider.com
SMTP_SECURE=false

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ============================================
# STRIPE CONFIGURATION (Optional)
# ============================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=./uploads/products
MAX_IMAGE_SIZE=5242880

# ============================================
# NOTES
# ============================================
# - Change JWT_SECRET and JWT_REFRESH_SECRET in production!
# - Email is optional - app will work without SMTP configured
# - Stripe is optional - payment features will be disabled without keys
# - For production, use strong DB password and proper JWT secrets
